alias composer="docker exec {{CONTAINER}}-php composer"
alias php="docker exec {{CONTAINER}}-php php"
alias up="docker-compose up -d"
alias down="docker-compose down"
alias load="source docker/alias"
alias containers="docker container ls | grep slim-"
alias php-bash="docker exec -it {{CONTAINER}}-php /bin/bash"
alias php-exec="docker exec {{CONTAINER}}-php"
alias nginx-bash="docker exec -it {{CONTAINER}}-nginx /bin/bash"
alias nginx-exec="docker exec {{CONTAINER}}-nginx"
